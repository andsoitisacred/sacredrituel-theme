{%- comment -%}
  Visible-by-default Auto‑Ship perks block for Skio plan picker (mobile friendly).
{%- endcomment -%}

{%- assign perks_discount = discount_text | default: '20%' -%}

<div class="skio-autoship-perks" data-skio-autoship-perks>
  <div class="sapt">Auto‑Ship perks</div>

  <ul class="sapl" role="list">
    <li class="sapi">
      <svg class="skio-autoship-perks__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
        <circle cx="8" cy="8" r="7" fill="none" stroke="currentColor" stroke-width="1.5"></circle>
        <path d="M4.2 8.3 L6.6 10.7 L11.8 5.5" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>

      <span class="sapx">
        <span class="skio-autoship-perks__label">Never run out</span><span class="s">:</span>
        <span class="d">ships on your schedule</span>
      </span>
    </li>

    <li class="sapi">
      <svg class="skio-autoship-perks__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
        <circle cx="8" cy="8" r="7" fill="none" stroke="currentColor" stroke-width="1.5"></circle>
        <path d="M4.2 8.3 L6.6 10.7 L11.8 5.5" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>

      <span class="sapx">
        <span class="skio-autoship-perks__label">You’re in control</span><span class="s">:</span>
        <span class="d">skip, pause, swap, or cancel anytime</span>
      </span>
    </li>

    <li class="sapi">
      <svg class="skio-autoship-perks__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
        <circle cx="8" cy="8" r="7" fill="none" stroke="currentColor" stroke-width="1.5"></circle>
        <path d="M4.2 8.3 L6.6 10.7 L11.8 5.5" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>

      <span class="sapx">
        <span class="skio-autoship-perks__label">Save every delivery</span><span class="s">:</span>
        <span class="d">{{ perks_discount }} off (no codes)</span>
      </span>
    </li>

    <li class="sapi">
      <svg class="skio-autoship-perks__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
        <circle cx="8" cy="8" r="7" fill="none" stroke="currentColor" stroke-width="1.5"></circle>
        <path d="M4.2 8.3 L6.6 10.7 L11.8 5.5" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>

      <span class="sapx">
        <span class="skio-autoship-perks__label">We’ll remind you</span><span class="s">:</span>
        <span class="d">email/SMS 3 days before each shipment</span>
      </span>
    </li>

    <li class="sapi">
      <svg class="skio-autoship-perks__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
        <circle cx="8" cy="8" r="7" fill="none" stroke="currentColor" stroke-width="1.5"></circle>
        <path d="M4.2 8.3 L6.6 10.7 L11.8 5.5" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>

      <span class="sapx">
        <span class="skio-autoship-perks__label">Surprise &amp; delight</span><span class="s">:</span>
        <span class="d">occasional free gifts for members</span>
      </span>
    </li>
  </ul>
</div>
