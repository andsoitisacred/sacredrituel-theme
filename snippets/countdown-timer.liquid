<!-- Countdown Timer Container -->
<span id="countdown-timer" class="announcement"></span>
<script>
// Function to initialize and refresh the countdown
function startCountdown(targetDate) {
    const countdownContainer = document.getElementById("countdown-timer");
    function updateCountdown() {
        const now = new Date();
        const distance = targetDate - now;
        if (distance < 0) {
            countdownContainer.innerHTML = "Countdown Ended!";
            clearInterval(interval);
            return;
        }
        // Calculate days, hours, minutes
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        // Display the countdown
        countdownContainer.innerHTML = `ðŸ“¦ Free Express Shipping: ${hours} hours, ${minutes} min ðŸ“¦`;
    }
    // Initial call to display countdown immediately
    updateCountdown();
    // Update countdown every minute (60000ms)
    const interval = setInterval(updateCountdown, 1000);
}
// Define the target date (December 19, 2024, 14:00 AM PST)
const targetDate = new Date("December 19, 2024 14:00:00 GMT-0800 (Pacific Standard Time)");
startCountdown(targetDate);
</script>
